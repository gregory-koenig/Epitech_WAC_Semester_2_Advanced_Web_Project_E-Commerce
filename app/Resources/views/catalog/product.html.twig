                                <i class="fas fa-star full-star"></i>
                                <i class="far fa-star empty-star"></i>
                            </div>

                            <div class="based-on">Basée sur</div>

                            <div class="opinions-number">1 avis</div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 shipping">
                    <span class="availability">— Disponibilités —</span>
                    <span class="availability-price">{{ product.price }}€ TTC</span>

                    <a href="{{ path('cart_add', { 'id': product.id, 'productName': product.name, 'productQty': '1', 'productPrice': product.price }) }}">
