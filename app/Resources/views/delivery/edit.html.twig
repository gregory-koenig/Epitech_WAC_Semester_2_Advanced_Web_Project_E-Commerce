{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Adresse de livraison</h1>

    <ul>
        <li>
            <a href="{{ path('user') }}">Retour au profil</a>
        </li>
    </ul>

    {{ form_start(edit_form, {'attr': {'class': 'form-group'}}) }}
        <div class="form-group">
            {{ form_label(edit_form.address, "Adresse", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.address) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.address, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.zipCode, "Code postal", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.zipCode) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.zipCode, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.city, "Ville", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.city) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.city, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.country, "Pays", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.country) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.country, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

