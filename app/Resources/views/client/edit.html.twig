{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Informations personnelles</h1>

    <ul>
        <li>
            <a href="{{ path('user') }}">Retour au profil</a>
        </li>
    </ul>

    {{ form_start(edit_form, {'attr': {'class': 'form-group'}}) }}
        <div class="form-group">
            {{ form_label(edit_form.lastName, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.lastName) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.lastName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.firstName, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.firstName) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.firstName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.phone, "Téléphone", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            {{ form_errors(edit_form.phone) }}

            <div class="col-sm-10">
                {{ form_widget(edit_form.phone, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Éditer</button>
    {{ form_end(edit_form) }}
{% endblock %}